<B><%= link_to "HIT", bj_hit_path %> | DOUBLE D'S | SPLIT | <%= link_to "STAY", bj_stay_path %></B><BR>
  <% else %>
<B><H1><%= @result %></h1></B><br>
<B><%= link_to "Play Again", bj_path %></B>
  <% end %>
<BR>
<BR>
<% @play_deck.cards.each do |card| %>
<%= "#{card}, " %>
<% end %>
