<h2>Games</h2>
<%= link_to "New Game", new_game_path %><br><br>
<table border="1" cellpadding="2" width="300px" cellspacing="0">
  <tr><td>Game</td><td>Players</td><td></td></tr>
<% @games.each do |game| %>
  <tr>
    <td><%= link_to "#{game.id}", game_path(game) %> </td>
    <td>
      
      <table border="0" cellpadding="0" width="150px" cellspacing="1">
        
        <% game.players.each do |player| %>
          <tr>
            <td>
              <li><%= player.name %></li>
            </td>
            <td><% if !game.winners.first %>
                  <%= form_for @game, url: set_winner_path do |f| %>
                 <%= hidden_field_tag(:player, player.id) %>
                  <%= hidden_field_tag(:game, game.id) %>
                  <%= f.submit "W" %>
                <% end %>
            </td>
          </tr>
        <% end %>
<% end %>
          
        <tr>
          <td>
                  <li>Winners: <% if game.winners.first %>
                        <%= game.winners.first.name %>
                      <% end %></li>
          </td>
        </tr>
      </table>

    </td>
    <td><center><%= link_to "Delete", game, confirm: "Are you sure?", method: :delete %></center></td>
  </tr>
<% end %>
</table>