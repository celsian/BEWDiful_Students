<%= form_for @movie do |f| %>

<div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</div>

<div class="area">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
</div>

<div class="field">
    <%= f.label :year_released %><br>
    <%= f.text_field :year_released %>
</div>

<div class="field">
    <%= f.label :rating %><br>
    <%= f.text_field :rating %>
</div>

<div id="error_explanation">
    <% if @movie.errors.any? %>
      <%= render "errors", object: f.object %>
    <% end %>
</div>

  <%= f.submit %>
<% end %>

